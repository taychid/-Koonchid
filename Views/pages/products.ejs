<% include ../partials/header %>
<div class="container">
    <h1>Products</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(function(pro){ %>
            <tr>
                <td><%= pro.ProductID%></td>
                <td><%= pro.ProductName%></td>
                <td scope="row">
                    <a class="btn btn-info" href="/productdetail/<%= pro.ProductID%>">
                        View Details
                    </a>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<% include ../partials/footer %>